{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                    
      "lib": [
        "ES2020"
      ],                     
      "allowJs": true,
      "outDir": "lib",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "exclude": ["lib"]
}